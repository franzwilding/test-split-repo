<!doctype html>
<html>
<head>
    <title>{{ block('title') }} - {{ site_name }}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include '@UniteCMSCore/_assets.html.twig' %}
</head>
<body>

{% if block('navigation') is not empty %}
    <section class="unite-main-menu uk-flex uk-flex-column">
        {{ block('navigation') }}
    </section>
{% endif %}

    <section class="unite-main-section uk-flex-center uk-flex uk-flex-middle uk-flex-column" uk-height-viewport="offset-top: true">
        {% include '@UniteCMSCore/_messages.html.twig' %}

        {% if block('navigation') is empty %}
            <div class="uk-flex-1 uk-flex-center uk-flex uk-flex-middle uk-flex-column">
        {% endif %}

        {{ block('content') }}

        {% if block('navigation') is empty %}
            </div>
        {% endif %}

    </section>

</body>
</html>
