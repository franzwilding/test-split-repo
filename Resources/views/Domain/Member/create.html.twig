{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{% trans with {'%type%': memberType|escape } %}domain.member.create.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UniteCMSCore/Domain/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body full-content-card uk-flex-1">
    <header class="uk-card-header uk-flex">
        <h2 class="uk-flex-1" id="domain_member_create_headline_select_add_type">
            <a class="back-button" href="{{ url('unitecms_core_domainmember_index', [memberType]) }}"><i data-feather="arrow-left"></i></a>
            {% trans with {'%type%': memberType|escape } %}domain.member.create.headline.select_add_type{% endtrans %}
        </h2>
    </header>

    {{ form_errors(form) }}
    {{ form_start(form) }}

    {% set input_selector = form.select_add_type.vars.full_name %}

    <unite-cms-core-variants-select input="{{ input_selector }}" content="{{ form_row(form.select_add_type)|escape }}"></unite-cms-core-variants-select>
    <unite-cms-core-variants-variant input="{{ input_selector }}" value="existing_user" title="{% trans with {'%type%': memberType|escape } %}domain.member.create.headline.existing_user{% endtrans %}" content="{{ form_row(form.existing_user)|escape }}"></unite-cms-core-variants-variant>
    <unite-cms-core-variants-variant input="{{ input_selector }}" value="existing_api_key" title="{% trans with {'%type%': memberType|escape } %}domain.member.create.headline.existing_api_key{% endtrans %}" content="{{ form_row(form.existing_api_key)|escape }}"></unite-cms-core-variants-variant>
    <unite-cms-core-variants-variant input="{{ input_selector }}" value="invite_user" title="{% trans with {'%type%': memberType|escape } %}domain.member.create.headline.invite_user{% endtrans %}" content="{{ form_row(form.invite_user)|escape }}"></unite-cms-core-variants-variant>

    {{ form_end(form) }}
</article>
{% endblock content %}
