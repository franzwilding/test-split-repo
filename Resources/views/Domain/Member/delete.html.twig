{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{% trans with { '%user%': member|escape } %}domain.member.delete.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UniteCMSCore/Domain/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body full-content-card uk-flex-1">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ path('unitecms_core_domainmember_index', {
            organization: unite.organization.identifier,
            domain: unite.domain.identifier,
            member_type: memberType.identifier
        }) }}">
            <i data-feather="arrow-left"></i>
        </a>
        <h2>{% trans with { '%user%': member|escape } %}domain.member.delete.headline{% endtrans %}</h2>
    </header>
    {{ form(form) }}
</article>
{% endblock content %}
