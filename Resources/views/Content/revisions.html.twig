{% extends '@UnitedCMSCore/layout.html.twig' %}
{% block title %}{% trans with {'%content%': content } %}content.revisions.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UnitedCMSCore/Domain/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body uk-width-1-1 full-content-card">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ path('unitedcms_core_content_index', {
            domain: united.domain.identifier,
            organization: united.organization.identifier,
            content_type: contentType.identifier,
            view: view.identifier
        }) }}"><i data-feather="arrow-left"></i></a>
        <h2 class="uk-flex-1">{% trans %}content.revisions.headline{% endtrans %}</h2>
    </header>

    <div class="unite-card-table">
        <table class="uk-table uk-table-justify uk-table-divider uk-table-hover">
            <thead>
            <tr>
                <th>Info</th>
                <th>Data</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for revision in revisions %}
                <tr>
                    <td>
                        <h4>Version: #{{ revision.version }}</h4>
                        <ul class="uk-list">
                            <li>Action: {{ revision.action }}</li>
                            <li>Timestamp: {{ revision.loggedAt|date }}</li>
                            <li>Actor: {{ revision.username }}</li>
                        </ul>
                    </td>
                    <td>
                        {% if revision.data %}
                            <pre>{{ revision.data.data|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre>
                        {% endif %}
                    </td>
                    <td>
                        {% if not loop.first and revision.action != 'remove' %}
                            <button class="uk-button uk-button-default actions-dropdown" type="button"><i data-feather="more-horizontal"></i></button>
                            <div uk-dropdown="mode: click; pos: bottom-right; offset: 5">
                                <ul class="uk-nav uk-dropdown-nav">
                                    <li><a href="{{ path('unitedcms_core_content_revisionsrevert', {
                                            'organization': united.domain.organization.identifier,
                                            'domain': united.domain.identifier,
                                            'content_type': contentType.identifier,
                                            'view': view.identifier,
                                            'content': content.id,
                                            'version': revision.version
                                        }) }}">
                                            <i class="uk-margin-small-right" data-feather="rewind"></i>
                                            {% trans %}content.revisions.revert.button{% endtrans %}
                                        </a></li>
                                </ul>
                            </div>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

</article>
{% endblock content %}