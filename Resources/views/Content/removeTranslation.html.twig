{% extends '@UniteCMSCore/layout.html.twig' %}
{% block title %}{% trans with { "%locale%": content.locale, "%content%": content|escape } %}content.translations.remove.title{% endtrans %}{% endblock title %}
{% block navigation %}{{ include('@UniteCMSCore/Domain/_navigation.html.twig') }}{% endblock navigation %}
{% block content %}
<article class="uk-card uk-card-default uk-card-body full-content-card uk-flex-1">
    <header class="uk-card-header uk-flex">
        <a class="back-button" href="{{ url('unitecms_core_content_translations', [view, content]) }}"><i data-feather="arrow-left"></i></a>
        <h2 class="uk-flex-1">{% trans with { "%locale%": content.locale, "%content%": content|escape } %}content.translations.remove.headline{% endtrans %}</h2>
    </header>
    {{ form(form) }}
</article>
{% endblock content %}
